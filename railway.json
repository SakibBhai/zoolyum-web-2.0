{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "package.json",
      "next.config.mjs"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "NEXT_TELEMETRY_DISABLED": "1",
        "PORT": "$PORT"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "NEXT_TELEMETRY_DISABLED": "1",
        "PORT": "$PORT"
      }
    }
  },
  "regions": ["us-west1"],
  "services": [
    {
      "name": "web",
      "source": {
        "type": "image",
        "image": "node:18-alpine"
      },
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    }
  ]
}